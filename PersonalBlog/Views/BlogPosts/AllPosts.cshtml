@{
    @model PersonalBlog.Web.ViewModels.BlogPostsViewModel
    ViewData["Title"] = "All Posts";
}

<div class="list-container">
    <h1>All Posts</h1>

    <p>
        <a class="btn btn-success" asp-action="Create">Create New</a>
    </p>
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>
                    Post Title
                </th>
                <th>
                    Category
                </th>
                <th>
                    Post Date
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var post in @Model.Posts) {
            <tr>
                <td>
                    @post.PostTitle
                </td>
                <td>
                    @post.PostCategory
                </td>
                <td>
                    @post.PostDate.ToShortDateString()
                </td>
                <td>
                    <a class="text-dark" asp-action="Edit" asp-route-id="@post.PostId">Edit</a> |
                    <a class="text-dark" asp-action="Details" asp-route-id="@post.PostId">Details</a> |
                    <a class="text-dark" asp-action="Delete" asp-route-id="@post.PostId">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>
