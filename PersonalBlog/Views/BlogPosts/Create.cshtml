@model PersonalBlog.ClassLibrary.BlogPost

@{
    ViewData["Title"] = "Create Post";
}

<div class="create-container">
    <h1>Create</h1>

    <h4>Blog Post</h4>
    <hr />
    <div class="row">
        <div class="col">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="PostCategory" class="control-label"></label>
                    <select asp-for="PostCategory" class="form-control">
                        <option value="" disabled selected>Select Category</option>
                        <option value="Drums">Drums</option>
                        <option value="Guitar">Guitar</option>
                        <option value="Engineering">Engineering</option>
                    </select>
                    <span asp-validation-for="PostCategory" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PostTitle" class="control-label"></label>
                    <input asp-for="PostTitle" class="form-control" />
                    <span asp-validation-for="PostTitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PostImageURL" class="control-label"></label>
                    <input asp-for="PostImageURL" class="form-control" />
                    <span asp-validation-for="PostImageURL" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PostContent" class="control-label"></label>
                    <textarea asp-for="PostContent" class="form-control" rows="4" cols="50"></textarea>
                    <span asp-validation-for="PostContent" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="AllPosts">Back to List</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
