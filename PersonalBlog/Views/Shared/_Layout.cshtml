<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Jake's Blog</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Permanent+Marker&display=swap" rel="stylesheet"> 
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/Home.css" />
    <link rel="stylesheet" href="~/css/BlogPostIndex.css" />
    <link rel="stylesheet" href="~/css/DrumPosts.css" />
    <link rel="stylesheet" href="~/css/GuitarPosts.css" />
    <link rel="stylesheet" href="~/css/EngineeringPosts.css" />
    <link rel="stylesheet" href="~/css/Details.css" />
    <link rel="stylesheet" href="~/css/PostSearch.css" />
</head>
<body>
    <header class="my-header">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="nav-wrapper">
              <div class="navbar-brand my-font">A Music Blog</div>
              <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>

              <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">

                  <li class="nav-item active">
                    <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                  </li>

                  <li class="nav-item active">
                    <a class="nav-link text-dark" asp-controller="BlogPosts" asp-action="Index">All Posts</a>
                  </li>

                  <li class="nav-item active">
                    <a class="nav-link text-dark" asp-controller="BlogPosts" asp-action="Drums">Drums</a>
                  </li>

                  <li class="nav-item active">
                    <a class="nav-link text-dark" asp-controller="BlogPosts" asp-action="Guitar">Guitar</a>
                  </li>

                  <li class="nav-item active">
                    <a class="nav-link text-dark" asp-controller="BlogPosts" asp-action="Engineering">Engineering</a>
                  </li>

                </ul>
                @using (Html.BeginForm("Search", "BlogPosts", FormMethod.Post))
                    {
                        <div class="form-inline my-2 my-lg-0">
                            <input name="searchInput" class="form-control mr-sm-2" type="search" placeholder="Search">
                            <button class="btn btn-outline-dark my-2 my-sm-0" type="submit">Search</button>
                        </div>
                        
                    }
                @*<form class="form-inline my-2 my-lg-0">
                  <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                  <button class="btn btn-outline-dark my-2 my-sm-0" type="submit">Search</button>
                </form>*@
              </div>
            </div>
        </nav>
    </header>

    <div id="wrapper">
        <main role="main">
            @RenderBody()
        </main>
    </div>


    <footer class="border-top footer text-muted">
        <div class="container tc">
            &copy; 2021 - Blogarino
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
